<div class="card login-form">
	<div class="card-body">
		<h3 class="card-title text-center" style="padding: 3%;">Change password</h3>
		
		<!--Password must contain one lowercase letter, one number, and be at least 7 characters long.-->
		
		<div class="card-text">
			<form style=" margin-top: 2%;  margin-left: 10%;  margin-right: 10%" method="post">
				<div >
 
    {{#if userpassword}}
                  <p class="error text-danger">{{userpassword}}</p> 
                  {{/if}} 
 
</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Current password</label>
					<input type="password" class="form-control form-control-sm" style="width:44%" name="oldpass">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">New password</label>
					<input type="password" class="form-control form-control-sm" name="newpass" style="width:44%">
				</div>
				<button type="submit" class="flex-c-m stext-101 cl0  bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer"  style="float: right;margin-right: 65%;width: 23%;height: 45px;margin-left: -16%;margin-top: 2%;">Confirm</button>
			</form>
		</div>
	</div>
</div>
