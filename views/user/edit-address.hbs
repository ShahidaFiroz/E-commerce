         <form action="/edit-address/{{address._id}}" method="post" enctype="multipart/form-data">
          <div class="row mb-4">
            <div class="col">
              <div class="form">
                <input name="address" id="address" class="form-control input-custom" value="{{address.address}}" onkeyup="validateAddress()" >
                <label class="form-label" for="form9Example1">Address</label>
                 <span class="text-danger" id="addresserr"></span>
                {{!-- <input type="text" name="Name" id="Name" required="" value="{{product.Name}}"  class="form-control"> --}}
