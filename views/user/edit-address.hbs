<script>
  var errorName = document.getElementById('addresserr')
  var errorPlace = document.getElementById('placeerr')
  var errorCity = document.getElementById('cityerr')
  var errorZip = document.getElementById('ziperr')


 function validateAddress() {
        const name = document.getElementById('address').value;
        
        if (name == "") {
            errorName.innerHTML = 'Enter your Address'
            return false
        }
        
        errorName.innerHTML = null
        return true

    }
    function validateplace() {
        const name = document.getElementById('place').value
        if (name == "") {
            errorPlace.innerHTML = "Enter your place here"
            return false


        }
      

        errorPlace.innerHTML = null
        return true
    }
     function validatecity() {
        const name = document.getElementById('city').value
        if (name == "") {
            errorCity.innerHTML = "Enter your city"
            return false


        }
       

        errorCity.innerHTML = null
        return true
    }

    function validatezip() {
        const name = document.getElementById('zip').value
        if (name == "") {
            errorZip.innerHTML = "Enter your Pincode here"
            return false
        }
         if (name.length < 6) {
            errorZip.innerHTML = "Should be 6 digits"
            return false
        }
      
        errorZip.innerHTML = null
        return true
    }




    function validation() {
        if (!validateAddress()||!validateplace() || !validatecity()||!validatezip()) {
            return false
        }
        return true
    }

</script>